extends layout

block content
  h1= title
  //- const restaurant = ['Room_type','Duration','Cost']
  //- - let items = [] 
  - let items = results; 
  //- - let results;
  - let o;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row ')
      each o, index in items 
        
          div(class="card m-3" style="width: 18rem;")
            div(class="card-body")
              div( onclick='buy('+index+')' class="text-center display-4 text-uppercase") #{o.names}
              div( onclick='buy('+index+')' class="text-center display-6" style='color:'+o.colour) #{o.colour}
              div( onclick='buy('+index+')' class="text-center display-6") $ #{o.cost}
              div(class="d-flex justify-content-around mt-4")
                a(href="/van/detail/?id="+o._id class="btn btn-secondary" )  Detail
                a(href="/van/update/?id="+o._id class="btn btn-primary")  Update
                a(href="/van/delete/?id="+o._id class="btn btn-danger")  Delete